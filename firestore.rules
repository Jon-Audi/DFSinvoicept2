
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user owns the resource
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    // Users collection - each user can only read/write their own document
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Company/workspace documents - check ownership
    match /companies/{companyId} {
      allow read: if isAuthenticated() && 
                     (resource.data.ownerId == request.auth.uid ||
                      request.auth.uid in resource.data.memberIds);
      allow write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      
      // Subcollections under company
      match /{documents=**} {
        allow read: if isAuthenticated() && 
                       (get(/databases/$(database)/documents/companies/$(companyId)).data.ownerId == request.auth.uid ||
                        request.auth.uid in get(/databases/$(database)/documents/companies/$(companyId)).data.memberIds);
        allow write: if isAuthenticated() && 
                        get(/databases/$(database)/documents/companies/$(companyId)).data.ownerId == request.auth.uid;
      }
    }
    
    // Invoices, estimates, orders, etc - belong to companies
    match /{collection}/{docId} {
      allow read: if isAuthenticated() && 
                     (resource.data.companyId != null &&
                      (get(/databases/$(database)/documents/companies/$(resource.data.companyId)).data.ownerId == request.auth.uid ||
                       request.auth.uid in get(/databases/$(database)/documents/companies/$(resource.data.companyId)).data.memberIds));
      allow create: if isAuthenticated() && request.resource.data.companyId != null;
      allow update, delete: if isAuthenticated() && 
                               resource.data.companyId != null &&
                               (get(/databases/$(database)/documents/companies/$(resource.data.companyId)).data.ownerId == request.auth.uid ||
                                request.auth.uid in get(/databases/$(database)/documents/companies/$(resource.data.companyId)).data.memberIds);
    }
  }
}
