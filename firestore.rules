
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'User';
    }

    function isYardStaff() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Yard Staff';
    }

    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profiles can be read by any authenticated user, but only written by the owner or an admin.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Products can be read by any authenticated user.
    // Only Admins or Users with 'edit_products' can create, update, or delete products.
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin() || 'edit_products' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }

    // Customers and their notes can be read by authenticated users.
    // Only Admins or Users with 'manage_customers' can write customer data.
    match /customers/{customerId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || 'manage_customers' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;

      match /notes/{noteId} {
        allow read: if isAuthenticated();
        // Any authenticated user can add a note, but only admins can edit/delete existing ones.
        allow create: if isAuthenticated();
        allow update, delete: if isAdmin();
      }
    }

    // Estimates, Orders, and Invoices can be read by authenticated users.
    // Writing is restricted to Admins or those with specific management permissions.
    match /estimates/{estimateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || 'manage_estimates' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }
    
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || 'manage_orders' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }

    match /invoices/{invoiceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || 'manage_invoices' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }

    // Production tasks and history can be read by authenticated users.
    // Writing is restricted to Admins or specific roles.
    match /productionTasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isYardStaff();
    }

    match /productionHistory/{historyId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isYardStaff();
      allow update, delete: if isAdmin();
    }

    // Company settings can be read by any authenticated user.
    // Only Admins can change company settings.
    match /companySettings/{settingsId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Emails collection for Trigger Email extension.
    // Only allow authenticated users to create emails.
    match /emails/{emailId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false; // No one should read/update/delete from the client.
    }
  }
}
