rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Invoices and PDFs - authenticated users can read their own company's documents
    match /invoices/{companyId}/{document=**} {
      allow read: if isAuthenticated() && request.auth.uid != null;
      allow write: if isAuthenticated() && request.auth.uid != null && request.resource.size < 50 * 1024 * 1024; // 50MB max
      allow delete: if isAuthenticated() && request.auth.uid != null;
    }
    
    // Customer avatars and images
    match /customers/{companyId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.resource.size < 5 * 1024 * 1024; // 5MB max for images
      allow delete: if isAuthenticated();
    }
    
    // Product images
    match /products/{companyId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.resource.size < 5 * 1024 * 1024; // 5MB max
      allow delete: if isAuthenticated();
    }
    
    // Deny access to everything else by default
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}